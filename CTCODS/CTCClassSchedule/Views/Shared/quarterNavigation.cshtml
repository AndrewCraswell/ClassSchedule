<script type="text/javascript">
	$(document).ready(function () {
		function showThrobber() {
			var pageHeight = $(document).height();
			$('#overlay').css('height', pageHeight - 49 + 'px');
			$('#overlay').css('margin-top', 49 + 'px');
			$('#overlay').css('opacity', '0.5');
			$('#overlay').css('display', 'inherit');
			$('#lightbox').css('display', 'inherit');
		}

		//when user clicks refine, show throbber
		$('.searchSubmit').click(function () {
			showThrobber();
			$('#submitSearchForm').submit();
		});

	});
</script>


@{
	//viewbag variables are dynamic, so we need to convert to string to use with the Html.ActionLink
	String QuarterOneFriendly = (String)ViewBag.QuarterOneFriendly;
	String QuarterTwoFriendly = (String)ViewBag.QuarterTwoFriendly;
	String QuarterThreeFriendly = (String)ViewBag.QuarterThreeFriendly;
	String QuarterFourFriendly = (String)ViewBag.QuarterFourFriendly;

	String QuarterOneURL = (String)ViewBag.QuarterOneURL;
	String QuarterTwoURL = (String)ViewBag.QuarterTwoURL;
	String QuarterThreeURL = (String)ViewBag.QuarterThreeURL;
	String QuarterFourURL = (String)ViewBag.QuarterFourURL;

	String selected = " selected";

}
<div id="navbar">
@using(Html.BeginForm("Index", "Search", FormMethod.Get, new { id = "submitSearchForm" })) {

	<div id="browse"><a href="@Url.Content("~/")">Browse for Classes</a></div>
	<div id="search">
		<span id="search-text">Search</span>  <span id="search-tip">Tip: you can search by title, subject, courseid, item number or instructor.</span>
		<label for="seach-quarter-select">Pick a quarter</label>
        <select name="quarter" id="seach-quarter-select">
			<option value="@QuarterOneURL" @if (@ViewBag.quarter == QuarterOneURL) { <text> selected</text>}>@QuarterOneFriendly</option>
			<option value="@QuarterTwoURL" @if (@ViewBag.quarter == QuarterTwoURL) { <text> selected</text>}>@QuarterTwoFriendly</option>
			<option value="@QuarterThreeURL" @if (@ViewBag.quarter == QuarterThreeURL) { <text> selected</text>}>@QuarterThreeFriendly</option>
			<option value="@QuarterFourURL" @if (@ViewBag.quarter == QuarterFourURL) { <text> selected</text>}>@QuarterFourFriendly</option>
			<option value="CE">Continuing Education</option>
		</select>
		<label for="searh-keyword">Keywords</label>
        <input type="text" class="searchInput" id="searh-keyword" name="searchterm" value="@ViewBag.searchterm"/>
		<input type="submit" class="searchSubmit"  name="submit" value="Go" />

	</div>
    <div id="register"><a href="http://bellevuecollege.edu/enrollment/registration/register/">Register</a></div>
}


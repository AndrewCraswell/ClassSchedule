
@{
	//viewbag variables are dynamic, so we need to convert to string to use with the Html.ActionLink
	String QuarterOneFriendly = (String)ViewBag.QuarterOneFriendly;
	String QuarterTwoFriendly = (String)ViewBag.QuarterTwoFriendly;
	String QuarterThreeFriendly = (String)ViewBag.QuarterThreeFriendly;

	String QuarterOneURL = (String)ViewBag.QuarterOneURL;
	String QuarterTwoURL = (String)ViewBag.QuarterTwoURL;
	String QuarterThreeURL = (String)ViewBag.QuarterThreeURL;

	String selected = " selected";

}

@using(Html.BeginForm("Index", "Search", FormMethod.Get)) {
<div id="navbar">
	<div id="browse"><a href="@Url.Content("~/Classes/")All">Browse for Classes</a></div>
	<div id="search">
		Search
		<select name="quarter">
			<option value="@QuarterOneURL">@QuarterOneFriendly</option>
			<option value="@QuarterTwoURL">@QuarterTwoFriendly</option>
			<option value="@QuarterThreeURL">@QuarterThreeFriendly</option>
			<option value="CE">Continuing Education</option>
		</select>
		<input type="text" class="searchInput" name="searchterm" />
		<input type="submit" class="searchSubmit"  name="submit" value="Go" />

	</div>

</div> <!-- TODO: configurable? -->
<div id="register"><a href="http://bellevuecollege.edu/enrollment/registration/register/">Register</a></div>
}
@model CTCClassSchedule.Models.ProgramInformation

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset id="ProgramEdit">
        <legend>ProgramInformation</legend>

        @Html.HiddenFor(model => model.Abbreviation)



				<div class="left">


					<div class="editor-label">
							@Html.LabelFor(model => model.Title)
					</div>
					<div class="editor-field">
							@Html.TextBoxFor(model => model.Title, new { @class = "SubjectTextfield" })
							@Html.ValidationMessageFor(model => model.Title)
					</div>

					 <div class="editor-label">
							@Html.LabelFor(model => model.Intro)
					</div>
					<div class="editor-field">
							 @Html.TextAreaFor(model => Model.Intro, new { @class = "SubjectTextarea", @cols = 60, @rows = 7 })
							@Html.ValidationMessageFor(model => model.Intro)



					</div>


				</div>

				<div class="right">

					<div class="editor-label">
							@Html.LabelFor(model => model.AcademicProgram, "Academic Program (if different than subject)")
					</div>
					<div class="editor-field">
							@Html.TextBoxFor(model => model.AcademicProgram, new { @class = "SubjectTextfield" })
							@Html.ValidationMessageFor(model => model.AcademicProgram)
					</div>


					<div class="editor-label">
							@Html.LabelFor(model => model.ProgramURL, "Academic Program Website")
					</div>
					<div class="editor-field">
							@Html.TextBoxFor(model => model.ProgramURL, new { @class = "SubjectTextfield" })
							@Html.ValidationMessageFor(model => model.ProgramURL)
					</div>




					<div class="editor-label">
							@Html.LabelFor(model => model.Division)
					</div>
					<div class="editor-field">
							@Html.TextBoxFor(model => model.Division, new { @class = "SubjectTextfield" })
							@Html.ValidationMessageFor(model => model.Division)
					</div>

					<div class="editor-label">
							@Html.LabelFor(model => model.DivisionURL)
					</div>
					<div class="editor-field">
							@Html.TextBoxFor(model => model.DivisionURL, new { @class = "SubjectTextfield" })
							@Html.ValidationMessageFor(model => model.DivisionURL)
					</div>



        </div>
       </fieldset>
	<div id="lastModifiedBy">
				@if (Model.LastUpdated != null)
		{
					<text>Last modified by </text>@Model.LastUpdatedBy<text> on </text>@Model.LastUpdated
		}

				</div>

			 <div class="bottom">
        <p>
            <input type="submit" value="Save" /> <a href="@Request.UrlReferrer.ToString()" class="cancelEdit">Cancel</a>
        </p>
				</div>

}
